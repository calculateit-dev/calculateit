{
  "name": "@calculateit/web-component",
  "version": "1.0.8",
  "description": "Platform-agnostic web component for interactive calculators built with Lit",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build && tsc --emitDeclarationOnly",
    "dev": "vite build --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "lit": "^3.0.0"
  },
  "devDependencies": {
    "@calculateit/parser-js": "workspace:*",
    "@swc/core": "^1.15.4",
    "typescript": "^5.9.3",
    "vite": "^7.2.7",
    "vite-plugin-dts": "^4.5.4"
  },
  "keywords": [
    "web-component",
    "calculator",
    "lit",
    "custom-element",
    "reactive",
    "platform-agnostic"
  ]
}
